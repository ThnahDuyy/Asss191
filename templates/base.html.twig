{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}Wellcome to Cellphones!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
			<link href="{{ asset('mystyle.css') }}" rel="stylesheet"/>
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
			<link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet"/>
			<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"/>
			<link rel="icon" type="image/x-icon" href="asset/images/favicon.ico"/>
		{% endblock %}
		{% block javascripts %}
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<nav class="navbar navbar-expand-lg navbar-light sticky-top" style="background-color: #FFE6E6">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{ path('home') }}">
					<h4>Cellphones</h4>
				</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div  class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav mx-auto">
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="{{ path('home') }}">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('product') }}">All products</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('about') }}">About</a>
							</li>
						</ul>
						<div class="navbar-nav">
							<a class="btn btn-outline-dark nav-item" style="background-color: #D9CE3F" type="submit" href="{{ path('cart') }}">
								<i class="bi-cart-fill me-1"></i>
								Cart
							</a>
						</div>
					</div>
				</div>
			</nav>
			<header class="py-5 bgheader">

			</div>
		</header>
		{% endblock %}
		{% block body %}{% endblock %}
		<div class="footer-dark">
			<footer style="color: white">
				<div class="container">
					<div class="row">

						<div class="col-sm-6 item">
							<h3>Contact</h3>
							<ul>
								<li><span class="material-icons">
									email
									</span> cellphones@gmail.com</li>
								<li><span class="material-icons">
									call
									</span> 0283729173</li>
							</ul>
						</div>
						<div class="col-md-6 item text">
							<h3>ABCxyz</h3>
							<p>ABCxyz is a company that provides technology devices for users all over Vietnam.</p>
						</div>
					</div>
					<p class="copyright" align="center" style="color: white">Â© Cellphones 2022</p>
				</div>
			</footer>
		</div>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
