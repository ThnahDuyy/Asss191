{% extends 'base.html.twig' %}
{% block title %}
	{{ items.itName }}
{% endblock %}
{% block body %}
	<div class="container">
	<br></br>
		<div class="row mt-3 mb-4">
			<div class="col-md-6">
				<img src="{{ vich_uploader_asset(items, 'imageFile') }}" alt="{{ items.itName }}" class="img-fluid" width="200%">
			</div>
			<div class="col-md-6">
			<p>Category: {{items.catCategory}}</p>
				<h1 class="mt-4 mt-md-0"><strong>{{ items.itName }}</strong></h1>
				<h3>Price: {{ items.itPrice }}
					$</h3>
				<hr>
				<b>Description:
				</b>
				{{ items.itDescription }}
				{{ form_start(form, {'attr': {'class': 'col-md-6 mt-4 p-4 bg-light'}}) }}
				<div class="form-group ">
					{{ form_label(form.quantity) }}
					{{ form_widget(form.quantity, {'attr': {'class': 'form-control ' ~ (form.quantity.vars.valid ? '' : 'is-invalid')}}) }}
					<div class="invalid-feedback ">
						{{ form_errors(form.quantity) }}
					</div>
				</div >
				{{ form_widget(form.add, {'attr': {'class': 'btn btn-warning w25'}}) }}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
