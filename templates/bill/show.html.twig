{% extends 'baseadmin.html.twig' %}

{% block title %}Bill details - Admin site{% endblock %}

{% block body %}
<h1>BILL INFORMATION</h1>
<hr></hr>
<h3>BILL DETAILS</h3>
<br></br>

    <div class="container">
        <div class="row col-md-3">
            <h4>
                <strong>ID:</strong>
            </h4>
        </div>
        <div class="row col-md-9">
            <h4>{{ bill.id }}</h4>
        </div>

        <div class="row col-md-3">
            <h4>
                <strong>Full name:</strong>
            </h4>
        </div>
        <div class="row col-md-9">
            <h4>{{ bill.fullname }}</h4>
        </div>

        <div class="row col-md-3">
        <h4>
            <strong>Phone number:</strong>
        </h4>
    </div>
    <div class="row col-md-9">
        <h4>{{ bill.phone }}</h4>
    </div>

    <div class="row col-md-3">
        <h4>
            <strong>Address:</strong>
        </h4>
    </div>
    <div class="row col-md-9">
        <h4>{{ bill.cusAddress }}</h4>
    </div>
    </div>
<br></br>
<a href="{{ path('app_bill_index') }}" style="background-color: #A1DD70; color: black" class="btn btn-primary">Back to list</a>

{% endblock %}
